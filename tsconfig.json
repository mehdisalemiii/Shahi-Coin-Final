{
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "esnext",
    "target": "es2016", 
    "rootDir": ".", 
    "allowImportingTsExtensions": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": true,
    "outDir": "./build/js",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true 

    
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json" 
  ]
}

